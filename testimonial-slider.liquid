{% if block.settings.verfication_icon or block.settings.customer %}
<div class="image-name-wrapper">
{% if block.settings.verfication_icon %}
<div class="image">
{{ block.settings.verfication_icon | image_url: width: block.settings.verfication_icon.width, height:block.settings.verfication_icon.height | image_tag  }}
</div>
{% endif %}
